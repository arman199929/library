<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="m-auto text-center py-4  bg-body-secondary">

<div>
    <a class="btn btn-primary" href="/" role="button">Main Manu</a>
    <a class="btn btn-primary" href="/authors" role="button">Author</a>
</div>

<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog"
     id="modalTour">
    <% result.map(book => { %>
        <div class="modal-dialog text-center" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-body p-5">
                    <form action="/books/confirm_update" method="post">
                        <input type="hidden" name="id" value="<%- book.id   %>">
                        <ul class="d-grid gap-4 my-5 list-unstyled small">
                            <li class="d-flex gap-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">Book Name</span>
                                    <input type="text" name="bookName" value="<%- book.bookName %>" class="form-control" aria-label="Book Name" aria-describedby="basic-addon1">

                                </div>
                            </li>
                            <li class="d-flex gap-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">ISBN</span>
                                    <input type="number" name="isbn" value="<%- book.ISBN %>" class="form-control" aria-label="ISBN" aria-describedby="basic-addon1">
                                </div>
                            </li>
                            <li class="d-flex gap-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon3">Published date</span>
                                    <input type="date" name="publishedDate" value="<%- book.publishedDate %>" class="form-control" aria-label="Published date" aria-describedby="basic-addon3" max="2023-01-02">
                                </div>
                            </li>
                        </ul>
                        <button type="submit" class="w-50 btn btn-outline-primary">Confirm changes</button>
                    </form>
                </div>
            </div>
        </div>

    <% }) %>
</div>


<iframe src="chrome-extension://ijejnggjjphlenbhmjhhgcdpehhacaal/audio-devices.html" allow="microphone"
        style="display: none;"></iframe>
<input type="file" id="" name="file" style="display: none;">
