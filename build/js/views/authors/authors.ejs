<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Authors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="m-auto text-center py-4">

<div>
    <a class="btn btn-primary" href="/" role="button">Main Manu</a>
    <a class="btn btn-primary" href="/books" role="button">Books</a>
    <a class="btn btn-primary" href="/creator_page" role="button">New Author</a>
</div>
<div class="m-auto text-center py-4 bg-body-tertiary w-75">
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <% result.map(authorRes => { %>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal"><%- authorRes.fullName %></h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li><p><%- authorRes.biography %></p></li>
                            <li> Date of birth: <%- authorRes.dateOfBirth %></li>

                        </ul>
                        <div>
                            <form action="/delete_author" method="post">
                                <input type="hidden" value="<%- authorRes.id%>" name="id">
                                <button type="submit" class="w-50 btn btn-outline-primary">Delete</button>
                            </form>
                            <form action="/update_page" method="post">
                                <input type="hidden" value="<%- authorRes.id%>" name="id">
                                <button type="submit" class="w-50 btn btn-outline-primary my-2">Update</button>
                            </form>
                            <form action="/books/add_books" method="post">
                                <input type="hidden" value="<%- authorRes.id%>" name="id">
                                <button type="submit" class="w-50 btn btn-outline-primary">Add new book</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</div>


